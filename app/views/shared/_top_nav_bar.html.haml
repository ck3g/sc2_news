.navbar.navbar-inverse.navbar-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{data: {toggle: "collapse", target: ".nav-collapse"}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse
        %ul.nav
          = link_to_nav t(:home), root_path
          = link_to_page_nav "about"
          = link_to_page_nav "jobs"
          = link_to_nav t(:tag_cloud), tags_path
          %li.divider-vertical
          - if can? :create, Article
            = link_to_nav t(:create_article), new_article_path
          - if can? :create, Page
            = link_to_nav t(:pages), pages_path

        - if user_signed_in?
          .btn-group.pull-right
            = link_to "#", class: "btn dropdown-toggle", data: { toggle: "dropdown" } do
              %i.icon-user
              = current_user.name
              %span.caret
            %ul.dropdown-menu
              %li= link_to t("users.profile"), current_user
              %li.divider
              %li= link_to t("users.logout"), :destroy_user_session, method: :delete
        - else
          = form_for "user", url: user_session_path, html: {action: user_session, class: "form-inline pull-right top-login"} do |f|
            = f.email_field :email, placeholder: "email", class: "input-small"
            = f.password_field :password, placeholder: "Пароль", class: "input-small"
            = f.submit "Войти", class: "btn"
