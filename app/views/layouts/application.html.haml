!!!
%html
  %head
    = stylesheet_link_tag  "application", media: "all"
    = favicon_link_tag "favicon.ico"
    = display_meta_tags site: t(:site_name)
    = csrf_meta_tags
  %body{:"data-development" => Rails.env.development?}
    .row-fluid
      .span6
        = link_to root_path do
          = image_tag 'logo.gif', alt: t(:site_name)
      .span6
        = link_to "http://sc2.wow.md/selectGame.jsp", class: "pull-right top-right-banner", target: "_blank" do
          = image_tag "banners/sc2.wow.md.gif"
    .row-fluid
      = render 'shared/top_nav_bar'

    .container-fluid.background.main-container
      = render partial: "shared/flash_messages", locals: {flash: flash}
      .row-fluid
        .span12
          .span8.content-bar
            = yield
          .span3.sidebar
            = render 'shared/side_right'
      %hr/

    = render 'shared/tags'

    = render 'shared/footer'

    =# render 'shared/social_widgets'

    = javascript_include_tag "application"

    = render 'shared/google_analytics'

