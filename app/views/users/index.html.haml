.well
  %h2= t(:manage_users)

  = render 'shared/search', model: User, placeholder: t(:search_users_by_username_or_email)

  %p= raw page_entries_info @users

  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th= "#"
        %th= User.human_attribute_name(:email)
        %th= User.human_attribute_name(:username)
        %th= User.human_attribute_name(:roles)
        %th
    %tbody
      - @users.each do |user|
        %tr{id: dom_id(user)}
          %td= user.id
          %td= user.email
          %td= user.username
          %td= roles_list user
          %td
            .pull-right
              = link_to t(:edit), edit_user_path(user), class: "btn btn-mini"


  = paginate @users
