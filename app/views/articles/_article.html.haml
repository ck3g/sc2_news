.article.well{id: dom_id(article)}
  .pull-left
    %h3
      = link_to article.title, article
  .pull-right
    %i.icon-eye-open
    = t("articles.meta.views_count", :views_count => article.views_count)
    = link_to user_path(article.user) do
      %i.icon-user
      = article.user_name || article.user_email
  .spacer
  .article-body
    = raw(article.body)
  .article-tags.pull-left
    - article.tags.each do |tag|
      = link_to tag_articles_path(tag.name) do
        %i.icon-tag
        = tag.name
      &nbsp;&nbsp;
  .article-meta.pull-right
    %i.icon-time
    = article.created_at
    = link_to article_path(article, anchor: "comments") do
      %i.icon-comment
      = t("articles.meta.comments_count", :count => article.comments.length)
  .spacer
